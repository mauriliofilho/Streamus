@model Streamus.Web.ViewModels.Search.SearchViewModel

@Html.Partial("_MediaItemsList", Model.Items)
<div class="row">
	<div class="col-md-12">
		<ul class="pagination">
			@{
				var disabledAttrs = new { onclick = "javascript:return false;", style = "color: gray;" };
			}
			<li>@Html.ActionLink("«", "Index", "Search", new { page = Model.CurrentPage - 1 }, Model.IsFirstPage ? disabledAttrs : null)</li>
			@for (var pageIndex = 0; pageIndex < Model.PagesCount; pageIndex++)
			{
				<li>@Html.ActionLink((pageIndex + 1).ToString(), "Index", "PageableFeedbackList", new { page = pageIndex }, null)</li>
			}
			<li>@Html.ActionLink("»", "Index", "Search", new { page = Model.CurrentPage + 1 }, Model.IsLastPage ? disabledAttrs : null)</li>
		</ul>
	</div>
</div>